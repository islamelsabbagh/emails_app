<mvc:View controllerName="test.app.emailapp.controller.Master"
    xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Page id="Master" title="{i18n>title}">
        <f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
            <!-- DynamicPage Title -->
            <f:title>
                <f:DynamicPageTitle>
                    <f:heading>
                        <Title text="Customers"/>
                    </f:heading>
                </f:DynamicPageTitle>
            </f:title>

            <!-- DynamicPage Content -->
            <f:content>
                <VBox fitContainer="true">
                    <OverflowToolbar class="sapFDynamicPageAlignContent">
                        <ToolbarSpacer/>
                        <SearchField search=".onSearch" width="17.5rem"/>
                        <OverflowToolbarButton icon="sap-icon://sort" text="Sort" type="Transparent" press=".onSort"/>
                    </OverflowToolbar>
                    <Table
                        id="customersTable"
                        inset="false"
                        items="{
                            path: 'customers>/CustomersCollection',
                            sorter: {
                                path: 'accountName'
                            }
                        }"
                        class="sapFDynamicPageAlignContent"
                        width="auto">
                        <columns>
                            <Column width="12em">
                                <Text text="Customer"/>
                            </Column>
                            <Column width="12em" hAlign="End">
                                <Text text="Emails"/>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem type="Navigation" press=".onListItemPress">
                                <cells>
                                    <ObjectIdentifier title="{customers>accountName}" text="{customers>addressID}"/>
                                    <Text text="{=${customers>emailAddresses}.length}"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
            </f:content>

            <!-- DynamicPage Footer -->
            <f:footer>
                <OverflowToolbar>
                    <ToolbarSpacer/>
                    <Button type="Accept" text="Accept"/>
                    <Button type="Reject" text="Reject"/>
                </OverflowToolbar>
            </f:footer>
        </f:DynamicPage>
    </Page>
</mvc:View>